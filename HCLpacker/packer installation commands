packer installation: 
sudo yum install -y yum-utils
sudo yum-config-manager --add-repo https://rpm.releases.hashicorp.com/AmazonLinux/hashicorp.repo
sudo yum -y install packer
packer
packer version



packer commands:
  packer init packagename
  packer validate
  packer fmt
  packer fix
  packer inspect
  packer build
  packer hcl_upgrade
  packer console